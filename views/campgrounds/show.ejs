<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= campground.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title%>
                    </h5>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location%>
                    </li>
                    <% if(!campground.author){ %>
                        <li class="list-group-item">Submited By - unknown</li>
                    <% } else{ %>  
                        <li class="list-group-item">Submited By -<%= campground.author.username%></li>
                    
                    <li class="list-group-item">â‚¹<%= campground.price%>/night</li>
                </ul>
                <% if(currentUser && campground.author.equals(currentUser._id)){%> 
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="card-link btn btn-secondary" href="/campgrounds">Back</a>
                </div>
                <% } %> 
                <% } %> 
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <% if(currentUser) {%> 
        <div class="col-6">
            <h2>Leave a review</h2>
            <form action="/campgrounds/<%= campground._id %>/reviews  " method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" class="form-range" id="rating" name="review[rating]" min="0" max="5" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="review">Review</label>
                    <textarea name="review[body] id=" review" cols="30" rows="3" class="form-control"
                        required></textarea>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
            <% } %> 
            <% for(let reviews of campground.review) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating:- <%= reviews.rating%>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">By <%=reviews.author.username %> </h6>
                        <p class="card-text">
                            Review:- <%= reviews.body%>
                        </p>
                        <% if(reviews.author._id === currentUser)  %> 
                        <form action="/campgrounds/<%= campground._id %>/reviews/<%= reviews._id %>?_method=DELETE  "
                            method="post">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <% } %> 
                    </div>
                </div>
                <% } %>
        </div>
    </div>